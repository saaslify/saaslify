{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src", "rollup.config.js"
  ]
}
